<h2><%= t 'pledge.now_make_a_pledge' %></h2>

<div class="row">
  <div class="col-md-6">
    <%= simple_form_for @pledge do |f| %>
      <%= f.input :name, placeholder: 'Jane Micheals' %>
      <%= f.input :email, placeholder: 'jane.michaels@example.com' %>
      <%= f.input :pledge, placeholder: t('pledge.i_am_going_to_make_a_difference_by') %>
      <%= f.submit t('shared.pledge'), class: 'btn btn-success' %>
    <% end %>
  </div>

  <div class="col-md-6">
    <h2><%= t 'pledge.suggestions' %></h2>
    <ul>
      <li><%= t 'pledge.suggestion_1' %></li>
      <li><%= t 'pledge.suggestion_2' %></li>
      <li><%= t 'pledge.suggestion_3' %></li>
      <li><%= t 'pledge.suggestion_4' %></li>
    </ul>
  </div>
</div>